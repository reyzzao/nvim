{
  "noformat": {
    "prefix": "noformat",
    "body": ["-- @NoFormatOnSave"],
    "description": "noformat"
  },
  "fileName": {
    "prefix": "fileName",
    "body": ["-- @file: ${1}", ""],
    "description": "fileName"
  },
  "Função Anônima": {
    "prefix": "fn",
    "body": [
      "local ${1:nome_funcao} = function(${2:args})",
      "\t${3:-- Corpo da função}",
      "end"
    ],
    "description": "Cria uma função anônima local"
  },
  "Loop For Numérico": {
    "prefix": "for",
    "body": [
      "for ${1:i} = ${2:1}, ${3:10}, ${4:1} do",
      "\t${5:-- Corpo do loop}",
      "end"
    ],
    "description": "Cria um loop for numérico"
  },
  "If-Else Statement": {
    "prefix": "ife",
    "body": [
      "if ${1:condicao} then",
      "\t${2:-- Faça algo}",
      "else",
      "\t${3:-- Faça outra coisa}",
      "end"
    ],
    "description": "Cria uma estrutura if-else"
  },
  "Print Statement": {
    "prefix": "pr",
    "body": [
      "print(${1:mensagem})"
    ],
    "description": "Imprime uma mensagem no console"
  },
  "Tabela Vazia": {
    "prefix": "tbl",
    "body": [
      "local ${1:nome_tabela} = {}"
    ],
    "description": "Cria uma tabela Lua vazia"
  },
  "Comentário de Bloco": {
    "prefix": "cm",
    "body": [
      "--[[",
      "${1:-- Seu comentário aqui}",
      "--]]"
    ],
    "description": "Cria um comentário de bloco"
  }
}